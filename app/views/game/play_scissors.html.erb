<div class="container text-center">
  <hr>
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <a class="btn btn-primary" href="http://localhost:3000/rock/" role="button">Play Rock</a>
        </div>
        <div class="btn-group" role="group">
          <a class="btn btn-info" href="http://localhost:3000/paper/" role="button">Play Paper</a>
        </div>
        <div class="btn-group" role="group">
          <a class="btn btn-primary" href="http://localhost:3000/scissors/" role="button">Play Scissors</a>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-offset-2 col-md-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title">You played Scissors</h3>
        </div>
        <div class="panel-body">
          <img src="http://localhost:3000/assets/images/scissors.png" alt="" class="img-responsive"/>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title">The computer played <%= @computer_move.capitalize %></h3>
        </div>
        <div class="panel-body">
          <img src= <%= @computer_img_url %> class="img-responsive" alt="" />
        </div>
      </div>
    </div>
  </div>
  <div class="row well well-lg">
    <div class="col-md-offset-5 col-md-2">
      <% if @computer_move == "paper" %>
      <h1><span class="label label-success">You Won!</span></h1>
      <% elsif @computer_move == "scissors" %>
      <h1><span class="label label-warning">You Tied!</span></h1>
      <% elsif @computer_move == "rock" %>
      <h1><span class="label label-danger">You Lost!</span></h1>
      <% end %>
    </div>
  </div>
</div>
